    <h1 class="p-5 d-flex justify-content-center bg-primary">Student/Parent Portal</h1>
    <div class="p-2">
        <form class="well form-horizontal" id="contact_form">
            <fieldset>
                <legend>Register new student</legend>

                <div class="form-group">
                    <label class="col-md-4 control-label">Name</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="name" placeholder="Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Parent Name</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="parent-name" placeholder="Parent Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Parent Email</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input name="email" placeholder="Parent Email" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Group</label>
                    <div class="electContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                            <select name="group" class="form-control selectpicker">
                                <option value=" ">Plese select the group ID</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                </div>
        </form>
    </div>
    <div class="w-100 p-2">
        <button class="btn btn-primary">Email students parents</button>
        <select name="group" class="form-control selectpicker">
            <option value=" ">Select the ID of the subject of the email</option>
            <option>1{{id}}</option>
            <option>2{{id}}</option>
            <option>3{{id}}</option>
            <option>4{{id}}</option>
            <option>5{{id}}</option>
        </select>
        <textarea class="form-control h-100" aria-label="With textarea"></textarea>
    </div>
