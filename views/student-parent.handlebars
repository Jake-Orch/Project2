                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="editparent_name" name="new_parent_name" placeholder="Name" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Email</label>
                <div class="inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="editparent_email" name="new_parent_email" placeholder="Email" class="form-control" type="text">
