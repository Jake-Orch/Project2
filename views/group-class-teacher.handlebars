<h1 class="p-5 d-flex justify-content-center bg-primary">Teacher/Group/Club Portal</h1>
    <div class="row p-5">
        <div class="col">
            <legend class="d-flex justify-content-center bg-secondary rounded-top w-75">Register New Teacher</legend>
            <div class="form-group">
                <label class="col-md-4 control-label">Name</label>
                <div class="col-md-4 inputGroupContainer  w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="name" placeholder="Name" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Email</label>
                <div class="col-md-4 inputGroupContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="email" placeholder="Email" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Password</label>
                <div class="col-md-4 inputGroupContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="password" placeholder="Password" class="form-control" type="password">
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <legend class="d-flex justify-content-center bg-secondary rounded-top w-75">Register New Group</legend>
            <div class="form-group">
                <label class="col-md-4 control-label">Teacher</label>
                <div class="col-md-4 selectContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="teacher" class="form-control selectpicker">
                            <option value=" ">Plese select the teacher</option>
                            <option>1{{name}}</option>
                            <option>2{{name}}</option>
                            <option>3{{name}}</option>
                            <option>4{{name}}</option>
                            <option>5{{name}}</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Room</label>
                <div class="col-md-4 selectContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="room" class="form-control selectpicker">
                            <option value=" ">Plese select the room for the group</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <legend class="d-flex justify-content-center bg-secondary rounded-top w-75">Register New Club</legend>
            <div class="form-group">
                <label class="col-md-4 control-label">Teacher</label>
                <div class="col-md-4 selectContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="teacher" class="form-control selectpicker">
                            <option value=" ">Plese select the teacher</option>
                            <option>1{{name}}</option>
                            <option>2{{name}}</option>
                            <option>3{{name}}</option>
                            <option>4{{name}}</option>
                            <option>5{{name}}</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Room</label>
                <div class="col-md-4 selectContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="room" class="form-control selectpicker">
                            <option value=" ">Plese select the room for the group</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Day of club</label>
                <div class="col-md-4 selectContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="day" class="form-control selectpicker">
                            <option value=" ">Plese select a day for the club</option>
                            <option>Monday</option>
                            <option>Tuesday</option>
                            <option>Wednesday</option>
                            <option>Thursday</option>
                            <option>Friday</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">End time of club</label>
                <div class="col-md-4 selectContainer w-100">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="time" class="form-control selectpicker">
                            <option value=" ">Plese select the end time of the club</option>
                            <option>4:30pm</option>
                            <option>4:45pm</option>
                            <option>5pm</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
